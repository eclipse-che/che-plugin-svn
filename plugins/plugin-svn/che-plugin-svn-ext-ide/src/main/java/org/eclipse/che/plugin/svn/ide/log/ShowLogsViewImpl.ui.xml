<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>

        .main {
            width: 350px;
            height: 90px;
            padding-left: 20px;
            padding-right: 20px;
            padding-top: 15px;
            cursor: default;

            font-family: "Helvetica Neue", "Myriad Pro", arial, Verdana, Verdana, sans-serif;
            font-size: 13px;
            font-style: normal;
            font-weight: normal;
        }

    </ui:style>

    <g:HTMLPanel addStyleNames="{style.main}">
        <div>Revisions to show ( <b><span ui:field="revisionsCount"></span></b> max )</div>
        <div style="  padding-right: 5px; padding-top: 10px;">
            <g:TextBox width="100%" ui:field="revisionField" />
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
