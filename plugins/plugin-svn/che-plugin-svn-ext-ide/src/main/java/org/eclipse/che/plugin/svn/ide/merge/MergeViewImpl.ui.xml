<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field='constants' type='org.eclipse.che.plugin.svn.ide.SubversionExtensionLocalizationConstants'/>
    <ui:with field='resources' type='org.eclipse.che.plugin.svn.ide.SubversionExtensionResources'/>

    <ui:style>
        .margin5 {
            margin: 5px;
        }

        .block-header {
            overflow: hidden;
        }

        .block-header td {
            width: 100%;
        }

        .block-header td:first-child {
            white-space: nowrap;
            font-weight: bold;
            width: 10px;
        }

        .block-header hr {
            border: 0;
            padding-top: 1px;
        }

        .block-url-checkbox {
            width: 50px;
            font-weight: bold;
        }

        .hidden {
            display: none;
        }
    </ui:style>

    <g:DockPanel width="320px" addStyleNames="{style.margin5}">

        <!-- Target header with check box -->
        <g:Dock direction="NORTH">
            <g:HTMLPanel addStyleNames="{style.block-header}">
                <table>
                    <tr>
                        <td>Target</td>
                        <td><hr/></td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:Dock>

        <!-- Target text field -->
        <g:Dock direction="NORTH">
            <g:DockLayoutPanel unit="PX" width="320px" height="35px">
                <g:west size="50">
                    <g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
                        <g:Label text="Path:" addStyleNames="{style.margin5}"/>
                    </g:HorizontalPanel>
                </g:west>
                <g:center>
                    <g:TextBox width="260px" height="20px" ui:field="targetTextBox"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:Dock>

        <!-- Destination caption -->
        <g:Dock direction="NORTH">
            <g:HTMLPanel addStyleNames="{style.block-header}">
                <table>
                    <tr>
                        <td>Source</td>
                        <td><hr/></td>
                        <td><g:CheckBox text="URL" addStyleNames="{style.block-url-checkbox}" ui:field="sourceURLCheckBox"/></td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:Dock>

        <g:Dock direction="NORTH">
            <g:DeckPanel animationEnabled="true" ui:field="deckPanel">

                <g:DockPanel>
                    <g:Dock direction="NORTH">
                        <g:DockLayoutPanel unit="PX" width="320px" height="200px" ui:field="treeContainer"/>
                    </g:Dock>
                </g:DockPanel>

                <g:DockLayoutPanel unit="PX" width="320px" height="35px">
                    <g:west size="50">
                        <g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
                            <g:Label text="URL:" addStyleNames="{style.margin5}"/>
                        </g:HorizontalPanel>
                    </g:west>
                    <g:center>
                        <g:TextBox width="260px" height="20px" ui:field="sourceUrlTextBox"/>
                    </g:center>
                </g:DockLayoutPanel>
            </g:DeckPanel>
        </g:Dock>

    </g:DockPanel>
</ui:UiBinder>
